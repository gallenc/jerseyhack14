  <name>pgjdbc-ng</name>
  <version>0.6.osgi-wrap</version>
  <description>Rewrapped version of pgjdbc-ng 0.6 with correct OSGi Manifest </description>
  <packaging>bundle</packaging>

  <build>
    <plugins>
    
          <!-- to generate the OSGi bundle -->
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>3.0.1</version>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
            <!-- do not import ourself -->
<!--             <Import-Package> -->
<!--               !com.impossibl.postgres*, -->
<!--               io.netty.*;version="[4.0,4.1)", -->
<!--               * -->
<!--             </Import-Package> -->
          </instructions>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.10</version>
        <executions>
          <execution>
            <id>unpack</id>
            <phase>validate</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>

                  <!-- PostgreSQL Asychronous Notification JDBC driver -->
                  <groupId>com.impossibl.pgjdbc-ng</groupId>
                  <artifactId>pgjdbc-ng</artifactId>
                  <version>0.6</version>
<!--                   <classifier>complete</classifier> -->
<!--                   <exclusions> -->
<!--                     <exclusion> -->
<!--                       <groupId>io.netty</groupId> -->
<!--                       <artifactId>netty-all</artifactId> -->
<!--                     </exclusion> -->
<!--                   </exclusions> -->

                </artifactItem>

              </artifactItems>
              <!-- <includes>**/*.java</includes> -->
              <!-- <excludes>**/*.properties</excludes> -->
              <outputDirectory>${project.build.directory}/unpacked-jar</outputDirectory>
              <overWriteReleases>false</overWriteReleases>
              <overWriteSnapshots>true</overWriteSnapshots>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>3.0.1</version>
        <executions>
          <execution>
            <id>copy-resources</id>
            <phase>validate</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/classes/</outputDirectory>
              <resources>          
                <resource>
                  <directory>${project.build.directory}/unpacked-jar/</directory>
                  <filtering>false</filtering>
                </resource>
              </resources>              
            </configuration>            
          </execution>
        </executions>
      </plugin>
