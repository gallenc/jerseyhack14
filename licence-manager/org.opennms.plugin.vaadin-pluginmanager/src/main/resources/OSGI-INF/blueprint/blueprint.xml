  <!-- Provides OpenNMS headers for admin pages -->
  <reference id="onmsHeaderProvider" interface="org.opennms.web.api.OnmsHeaderProvider" availability="optional" />

  <!-- Main Plugin UI -->
  <bean id="pluginManagerAdminApplicationFactory" class="org.opennms.features.vaadin.config.PluginManagerAdminApplicationFactory">
    <property name="pluginModel" ref="pluginModel" />
    <property name="headerProvider" ref="onmsHeaderProvider" />
    <property name="headerLinks">
      <map>
        <entry key="Licence Manager Diagnostics" value="/opennms/admin/plugin-manager-licence-diagnostics" />
        <entry key="Feature Manager Diagnostics" value="/opennms/admin/plugin-manager-feature-diagnostics" />
      </map>
    </property>
  </bean>

  <bean id="pluginModel" class="org.opennms.features.vaadin.config.model.PluginModel" init-method="load" destroy-method="close">
    <property name="fileUri" value="./pluginmodeldata.xml" />
  </bean>

  <service id="pluginManagerService" interface="org.opennms.vaadin.extender.ApplicationFactory" ref="pluginManagerAdminApplicationFactory">
    <service-properties>
      <entry key="alias" value="/admin/plugin-manager" />
    </service-properties>
  </service>

  <!-- feature Diagnostics page -->
  <bean id="featureDiagnisticsApplicationFactory" class="org.opennms.features.vaadin.config.SimpleIframeApplicationFactory">
    <property name="headerProvider" ref="onmsHeaderProvider" />
    <property name="iframePageUrl" value="/opennms/featuremgr/diagnostics/feature-mgr-rest-diagnostics.html" />
    <property name="headerLinks">
      <map>
        <entry key="Return to Plugin Manager" value="/opennms/admin/plugin-manager" />
      </map>
    </property>
  </bean>

  <service id="featureDiagnisticsService" interface="org.opennms.vaadin.extender.ApplicationFactory" ref="featureDiagnisticsApplicationFactory">
    <service-properties>
      <entry key="alias" value="/admin/plugin-manager-feature-diagnostics" />
    </service-properties>
  </service>

  <!-- Licence Diagnostics page -->
  <bean id="licenceDiagnisticsApplicationFactory" class="org.opennms.features.vaadin.config.SimpleIframeApplicationFactory">
    <property name="headerProvider" ref="onmsHeaderProvider" />
    <property name="iframePageUrl" value="/opennms/licencemgr/diagnostics/licence-mgr-rest-diagnostics.html" />
    <property name="headerLinks">
      <map>
        <entry key="Return to Plugin Manager" value="/opennms/admin/plugin-manager" />
      </map>
    </property>
  </bean>

  <service id="licenceDiagnisticsService" interface="org.opennms.vaadin.extender.ApplicationFactory" ref="licenceDiagnisticsApplicationFactory">
    <service-properties>
      <entry key="alias" value="/admin/plugin-manager-licence-diagnostics" />
    </service-properties>
  </service>

  <!-- Setting up link to plugin manager in admin page -->

  <bean id="pluginManagerAdminUiLink" class="org.opennms.features.vaadin.pluginmanager.AdminPageNavEntry">
    <!-- <property name="url" value="admin/pluginManager.jsp" /> -->
    <property name="url" value="admin/plugin-manager" />
    <property name="name" value="OpenNMS Plugin Manager" />
  </bean>

  <service id="pluginManagerAdminUiService" interface="org.opennms.web.navigate.PageNavEntry" ref="pluginManagerAdminUiLink">
    <service-properties>
      <entry key="Page" value="admin" />
      <entry key="Category" value="operations" />
      <entry key="registration.export" value="true" />
    </service-properties>
  </service>

  <cm:property-placeholder persistent-id="org.opennms.features.licencemgr.config" update-strategy="reload">
    <cm:default-properties>
      <cm:property name="licenceServerURL" value="notSet" />
      <cm:property name="licenceServerUserName" value="notSet" />
      <cm:property name="licenceServerPassword" value="notSet" />
    </cm:default-properties>
  </cm:property-placeholder>

</blueprint>
